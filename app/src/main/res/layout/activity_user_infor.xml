<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/userinfor_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserInforActivity"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Avatar -->
        <ImageView
            android:id="@+id/userinfor_imgAvatar"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/user_infor"
            android:layout_marginTop="32dp"
            android:scaleType="centerCrop"
            android:background="@drawable/avatar_circle_background" />

        <!-- Name -->
        <TextView
            android:id="@+id/userinfor_txtFullname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nguyễn Hoài Tâm"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="12dp"/>

        <!-- Sub role -->
        <TextView
            android:id="@+id/userinfor_txtRole"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Student"
            android:textSize="14sp"
            android:textColor="#888888"
            android:layout_marginBottom="24dp" />

        <!-- Section Title -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="My Information"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="12dp" />

        <!-- Item: Name -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/userinfor_txtName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Raden Saleh"
            android:layout_marginBottom="16dp"
            android:background="@drawable/bottom_line_gray"
            android:paddingBottom="8dp" />

        <!-- Item: Email -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/userinfor_txtEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="radensaleh@hypee.ac"
            android:layout_marginBottom="16dp"
            android:background="@drawable/bottom_line_gray"
            android:paddingBottom="8dp" />

        <!-- Item: Phone -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Phone Number"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/userinfor_txtPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="+62 815 8189 1245"
            android:layout_marginBottom="16dp"
            android:background="@drawable/bottom_line_gray"
            android:paddingBottom="8dp" />

        <!-- Item: Password -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Password"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/userinfor_txtPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="**********"
            android:layout_marginBottom="32dp"
            android:background="@drawable/bottom_line_gray"
            android:paddingBottom="8dp" />

    </LinearLayout>
</ScrollView>
